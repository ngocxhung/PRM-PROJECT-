<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@android:color/white">

    <!-- Checkbox for Selection -->
    <CheckBox
        android:id="@+id/checkboxCartItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp" />

    <!-- Product Details (Image and Text) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/imageCartProduct"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_camera" />

        <!-- Product Name, Price, and Inventory Quantity -->
        <TextView
            android:id="@+id/textCartProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="4dp" />

        <TextView
            android:id="@+id/textCartPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="14sp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/textInventoryQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inventory Quantity: 100"
            android:textSize="12sp"
            android:padding="4dp" />
    </LinearLayout>

    <!-- Quantity Controls and Delete Button -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <!-- Quantity Controls (-, Quantity, +) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnDecreaseQuantity"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:textSize="16sp"
                android:padding="4dp" />

            <TextView
                android:id="@+id/textCartQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="16sp"
                android:padding="4dp" />

            <Button
                android:id="@+id/btnIncreaseQuantity"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:textSize="16sp"
                android:padding="4dp" />
        </LinearLayout>

        <!-- Delete Button -->
        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textSize="12sp"
            android:padding="4dp"
            android:drawableEnd="@android:drawable/ic_menu_delete" />
    </LinearLayout>

</LinearLayout>